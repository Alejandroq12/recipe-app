<h1>Public recipes</h1>

<% @recent_public_recipes.each do |recipe| %>
  <div class="recipe">
    <h2><%= link_to recipe.name, recipe %></h2>
    <p>By: <%= recipe.user.name %></p>
    <p>Total food items: <%= recipe.recipe_foods.size %></p>
    <p>Total price: $<%= recipe.total_price %></p>
  </div>
  <% if can? :destroy, recipe %>
    <%= button_to 'Remove', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure' } %>
  <% end %>

<% end %>