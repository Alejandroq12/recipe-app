<%= form_with(model: @food, url: foods_path, local: true, class: 'needs-validation', novalidate: true) do |form| %>
  <% if @food.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h4>
      <ul>
        <% @food.errors.each do |error| %>
          <li><%= error.full_message %></li> 
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="mb-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :measurement_unit %>
          <%= form.text_field :measurement_unit, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :price %>
          <%= form.text_field :price, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :quantity %>
          <%= form.text_field :quantity, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
